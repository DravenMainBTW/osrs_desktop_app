{
  "name": "osrs_app",
  "author": "DravenMainBTW",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "concurrently": "^6.2.0",
    "electron-is-dev": "^2.0.0",
    "node-sass": "^6.0.0",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "wait-on": "^6.0.0",
    "web-vitals": "^2.1.0"
  },
  "main": "./public/electron.js",
  "build": {
    "productName": "OSRS App",
    "appId": "org.osrs-app",
    "files": [
      "/node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/cash_stack.ico"
    },
    "nsis": {
      "installerIcon": "build/cash_stack.ico",
      "uninstallerIcon": "build/cash_stack.ico",
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "uninstallDisplayName": "OSRS App"
    }
  },
  "homepage": "./",
  "scripts": {
    "sass-build": "node-sass ./src/sass/main.scss -o ./src",
    "sass": "node-sass -w ./src/sass/main.scss -o ./src",
    "start": "react-scripts start",
    "start-el": "concurrently \"SET BROWSER=none && npm-run-all -p sass-build sass start \" \"wait-on http://localhost:3000 && electron .\"",
    "react-build": "react-scripts build",
    "dist": "electron-builder",
    "build": "yarn react-build && yarn dist",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^13.0.1",
    "electron-builder": "^22.10.5"
  }
}
